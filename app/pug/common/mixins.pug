mixin mhotel_new(name)
	-var hotel_name
	-var image
	-var geo
	-var price
	-var text
	-var a_ref
	case name
		when 'византия'
			-image = '../static/img/visantia/hotel.jpg';
			-hotel_name = 'Отель "Византия"';
			-geo = 'Анапа, Витязево ';
			-price = 'от 390';
			-text = 'Мы находимся в центре поселка Витязево (Анапа) – в его первой курортной зоне: в 300 метрах от морского побережья, добраться до которого можно пешком за пять минут. Песчаный пляж настолько близок, что посещать его можно ежедневно!';
			-a_ref  = '/visantia_about.html';
		when 'исидор'
			-image = '../static/img/isidor/hotel.jpg';
			-hotel_name = 'Отель "Исидор"';
			-geo = 'Анапа, пос. Витязево ';
			-price = 'от 650';
			- text = 'Отель “Исидор” расположен в курортном поселке Витязево – в 5-10 мин. ходьбы до моря, в непосредственной близости от развлекательного центра ( боулинг клуб, рестораны, парк с аттракционами), однако не настолько близко.. ';
			-a_ref  = '/isidor_about.html';
		when 'южная ночь'
			-image = '../static/img/yug_night/hotel.jpg';
			-hotel_name = 'Отель "Южная ночь"';
			-geo = 'Анапа, Джемете ';
			-price = 'от 420';
			-text = 'В курортном поселке Джемете, на второй линии Пионерского проспекта, на расстоянии 300 метров от городского песчаного пляжа, находится отель «Южная ночь».';
			-a_ref  = '/yug_night_about.html';
		when 'приморский'
