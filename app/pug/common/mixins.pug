		when 'христакис'
			-image = '../static/img/christakis/hotel.jpg';
			-hotel_name = 'Отель "Христакис"';
			-geo = 'Анапа, Витязево ';
			-price = 'от 600';
			-text = 'В отеле - комфортабельные номера, крытый бассейн с подогревом, детская площадка, детская и взрослая анимация, и он прекрасно подходит для пляжного семейного отдыха.';
			-a_ref  = '/christakis_about.html';
		when 'родничок'
			-image = '../static/img/rodnik/hotel.jpg';
			-hotel_name = 'Отель "Родничок"';
			-geo = 'Анапа ';
			-price = 'от 390';
