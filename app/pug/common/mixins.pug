mixin smenu(hotel_name,ref1,ref2,ref3,ref4,ref5,ref6,ref7)
	div.wrap-smenu
		nav.second-nav
			ul(id=hotel_name).smenu
				li.about
					a( href=ref1) Об отеле			
				li.rooms
					a(href=ref2) Номера
				li.price
					a(href=ref3) Цены
				li.promoution
					a(href=ref4) Акции
				li.gallery
					a(href=ref5) Фото
				li.response
					a(href=ref6) Отзывы
				li.contacts
					a(href=ref7) Контакты






mixin hname(text_desc,name_hotel,text_place)
	.what
		p= text_desc
	.name-hotel-h2
		h2= name_hotel
	.place-text
		p= text_place
mixin mnews(urlpict,date,text)
	.item-news
		.img
			a(href="javascript:void(0);")
				img(src= urlpict alt="")
		.desc
			.date
				span=  date
				a(href="javascript:void(0);")= text


