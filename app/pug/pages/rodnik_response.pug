block title
	| "Родничок" - Отзывы


block slider	
block photo_desk
	.base-wrap
		.main-hotel-img
		.bron-for-hotel-pages
			#search-widget-rodnik
		.banner
			.inner
				+hname('Отель','Родник','Анапа')



block second_menu
	.base-wrap
		//include ../common/second_menu
		+smenu('rodnik','/rodnik_about.html','/rodnik_rooms.html','/rodnik_price.html','/promoution.html','/rodnik_gallery.html','/rodnik_response.html','/rodnik_contacts.html') 

block content
	.base-wrap
		.resp-wrap
			h2.text-name-page Отзывы
			div.resp-window



			div.form-back-window
				// форма обратной связи
				h2.text Оставить отзыв 
				div.form-wrap
					form(method="POST" action="javascript:void(0);" onsubmit="ajax()")#form
						div.input
							input(type = "text" name="name" value="" placeholder ="Ваше имя" required ).name
						div.input
							input(type = "text" name="email" value=""  required placeholder ="Ваш e-mail").email

						div.input
							textarea(name="message" value="" required placeholder ="Напишите отзыв").message

						input.sbutton(type="submit" name="send" value="Отправить" ).send
						
	script(src="static/js/widget_rodnik.js")