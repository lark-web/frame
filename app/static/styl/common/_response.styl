div.resp-window, div.more-response
	display inline-block
	width 60%
	margin-left 20px
div.resp
	margin-bottom 20px
	padding-bottom 5px
	border-bottom 1px solid #ccc
	p.name
		font-size 16px
	p.text
		padding-left 10px
		font-size 14px
		
		color #888
		
div.form-back-window
	display inline-block
	width 30%
	padding-left 20px
	text-align left
	vertical-align top
div.form-wrap
	width 100%
	margin 0 auto
div.show-all
	text-align center
	margin-bottom 20px
	a
		color #888
		font-size 16px
		&:hover
			text-decoration underline

	
.input
	width 100%
	border 1px solid #ccc
	border-radius 3px
	input 
		border none
		padding 5px 0px 5px 10px
		color #333
		width 100%
		font-size 16px
	textarea
		border none
		resize vertical
		rows 5
		cols 50
		font-size 15px

input.sbutton
	margin-top 10px
	padding 3px 10px
	font-size 18px
